------------------------------------------------------------
-- (A) Profiles: replace insecure policies
------------------------------------------------------------
DO $do$
BEGIN
  IF to_regclass('public.profiles') IS NOT NULL THEN
    -- Drop any legacy policies so we can replace cleanly
    EXECUTE 'DROP POLICY IF EXISTS "profiles self update" ON public.profiles';
    EXECUTE 'DROP POLICY IF EXISTS "Users can update basic profile info" ON public.profiles';
    EXECUTE 'DROP POLICY IF EXISTS "Admins can manage all profiles" ON public.profiles';
    EXECUTE 'DROP POLICY IF EXISTS "profiles_secure_self_update" ON public.profiles';
    EXECUTE 'DROP POLICY IF EXISTS "profiles_admin_manage_all" ON public.profiles';

    -- Users can update their own non-privileged fields
    EXECUTE $p$
      CREATE POLICY "profiles_secure_self_update"
      ON public.profiles
      FOR UPDATE
      USING (id = auth.uid())
      WITH CHECK (
        id = auth.uid()
        AND role = (SELECT role FROM public.profiles WHERE id = auth.uid())
        AND founder_status = (SELECT founder_status FROM public.profiles WHERE id = auth.uid())
      )
    $p$;

    -- Admins can update any profile
    EXECUTE $p$
      CREATE POLICY "profiles_admin_manage_all"
      ON public.profiles
      FOR UPDATE
      USING (
        auth.uid() IN (SELECT id FROM public.profiles WHERE role = 'admin')
      )
    $p$;
  END IF;
END
$do$;

------------------------------------------------------------
-- (B) Invites: indexes + email constraint (guarded)
------------------------------------------------------------
DO $do$
BEGIN
  IF to_regclass('public.invites') IS NOT NULL THEN
    -- Helpful indexes
    EXECUTE 'CREATE INDEX IF NOT EXISTS idx_invites_email_created ON public.invites(email, created_at)';
    EXECUTE 'CREATE INDEX IF NOT EXISTS idx_invites_created_by_created ON public.invites(created_by, created_at)';

    -- Email format constraint (add once, guard by name)
    IF NOT EXISTS (
      SELECT 1
      FROM pg_constraint
      WHERE conname = 'check_email_format'
        AND conrelid = 'public.invites'::regclass
    ) THEN
      EXECUTE $p$
        ALTER TABLE public.invites
        ADD CONSTRAINT check_email_format
        CHECK (email ~* '^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$')
      $p$;
    END IF;
  END IF;
END
$do$;

------------------------------------------------------------
-- (C) Audit function + trigger (not nested inside DO)
------------------------------------------------------------

-- Write security events if table exists; no-op otherwise
CREATE OR REPLACE FUNCTION public.log_security_event(
  event_type TEXT,
  user_id UUID DEFAULT auth.uid(),
  metadata JSONB DEFAULT '{}'::jsonb
)
RETURNS VOID
LANGUAGE plpgsql
AS $fn$
BEGIN
  BEGIN
    INSERT INTO public.events (event, user_id, meta, created_at)
    VALUES (
      'security_' || event_type,
      COALESCE(user_id, auth.uid()),
      metadata,
      now()
    );
  EXCEPTION WHEN undefined_table THEN
    -- public.events not present yet, skip
    NULL;
  END;
END
$fn$;

-- Trigger function to log profile changes
CREATE OR REPLACE FUNCTION public.log_profile_role_changes()
RETURNS TRIGGER
LANGUAGE plpgsql
SECURITY DEFINER
AS $fn$
BEGIN
  -- Log when roles are changed
  IF OLD.role IS DISTINCT FROM NEW.role THEN
    PERFORM public.log_security_event(
      'role_changed',
      NEW.id,
      jsonb_build_object(
        'old_role', OLD.role,
        'new_role', NEW.role,
        'changed_by', auth.uid()
      )
    );
  END IF;

  -- Log when founder status changes
  IF OLD.founder_status IS DISTINCT FROM NEW.founder_status THEN
    PERFORM public.log_security_event(
      'founder_status_changed',
      NEW.id,
      jsonb_build_object(
        'old_status', OLD.founder_status,
        'new_status', NEW.founder_status,
        'changed_by', auth.uid()
      )
    );
  END IF;

  RETURN NEW;
END
$fn$;

-- Recreate trigger only if table exists
DO $do$
BEGIN
  IF to_regclass('public.profiles') IS NOT NULL THEN
    EXECUTE 'DROP TRIGGER IF EXISTS profile_security_audit ON public.profiles';
    EXECUTE 'CREATE TRIGGER profile_security_audit
               AFTER UPDATE ON public.profiles
               FOR EACH ROW
               EXECUTE FUNCTION public.log_profile_role_changes()';
  END IF;
END
$do$;